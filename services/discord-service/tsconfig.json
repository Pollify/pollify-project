{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2019"],
    "downlevelIteration": true,
    "rootDirs": ["src", "test"],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "noLib": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["jest", "node"]
  }
}
